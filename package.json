{
  "name": "seraphim-app",
  "version": "0.0.2",
  "description": "A tool to orchestrate hotkeys to automated chatgpt analysis",
  "author": {
    "name": "Alex Navarro",
    "email": "alex@jalapenolabs.io",
    "url": "https://jalapenolabs.io"
  },
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/jalapenolabs/seraphim",
  "packageManager": "yarn@4.12.0",
  "engines": {
    "node": ">=24.13.0",
    "yarn": ">=4.12.0"
  },
  "workspaces": [
    "electron/",
    "frontend/",
    "common/"
  ],
  "scripts": {
    "dev": "concurrently --kill-others \"yarn --cwd frontend dev\" \"yarn --cwd electron dev\"",
    "generate": "yarn prisma generate && yarn codex app-server generate-ts --out ./electron/src/vendor/codex-protocol && tsx ./scripts/buildkit-proto.ts",
    "setup": "yarn generate && yarn prisma db push",
    "build": "yarn workspaces foreach -Apt run build",
    "typecheck": "yarn workspaces foreach -Apt run typecheck",
    "smoketest": "cross-env SMOKETEST=true vitest run",
    "test": "vitest run",
    "test:dev": "vitest watch --coverage.enabled=false --reporter verbose",
    "lint": "yarn eslint --ext ts,tsx --max-warnings 0",
    "clean": "rimraf frontend/dist electron/dist electron/public/browser electron/.vite electron/out ~/.seraphim vscode/dist chrome/dist",
    "purge": "rimraf node_modules electron/node_modules frontend/node_modules common/node_modules chrome/node_modules vscode/node_modules",
    "testdrive": "bash ./scripts/testdrive.sh",
    "killall": "taskkill /IM node.exe /F",
    "precommit": "bash ./.githooks/pre-commit"
  },
  "dependencies": {
    "argparse": "^2.0.1",
    "chrome-remote-interface": "^0.33.3",
    "express": "^5.2.1",
    "hjson": "^3.2.2",
    "humanize-duration": "^3.33.0",
    "lodash-es": "^4.17.21",
    "moment": "^2.30.1",
    "node-global-key-listener": "^0.3.0",
    "openai": "^6.21.0",
    "prisma": "7",
    "strip-ansi": "^7.1.2",
    "ts-morph": "^26.0.0",
    "uuid": "^11.1.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@jalapenolabs/cli": "https://github.com/jalapenolabs/cli.git#7372df994ace977ca9130160b47d1fb032f6f1a4",
    "@openai/codex": "0.98.0",
    "@types/argparse": "^2.0.17",
    "@types/express": "^5.0.3",
    "@types/hjson": "^2.4.6",
    "@types/humanize-duration": "^3.27.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^25.1.0",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "chalk": "^5.4.1",
    "concurrently": "^9.2.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "google-proto-files": "^5.0.1",
    "happy-dom": "^18.0.1",
    "protobufjs": "^8.0.0",
    "protoc": "^33.5.0",
    "rimraf": "^6.0.1",
    "tar": "^7.5.9",
    "ts-proto": "^2.11.2",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3",
    "vite": "^7.3.1",
    "vite-bundle-visualizer": "^1.2.1",
    "vitest": "^3.2.4"
  }
}
