{
  "name": "seraphim",
  "version": "0.0.2",
  "description": "A tool to orchestrate hotkeys to automated chatgpt analysis",
  "author": {
    "name": "Alex Navarro",
    "email": "alex@jalapenolabs.io",
    "url": "https://jalapenolabs.io"
  },
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/jalapenolabs/seraphim",
  "engines": {
    "node": ">=22.16.0",
    "yarn": ">=1.22.0"
  },
  "workspaces": [
    "electron/",
    "frontend/",
    "common/",
    "chrome/",
    "vscode/"
  ],
  "scripts": {
    "dev": "concurrently --kill-others \"yarn --cwd frontend dev\" \"yarn --cwd electron dev\"",
    "build": "bash ./scripts/build.sh",
    "compile:deb": "yarn cross-env TARGET_MAKER=deb bash ./scripts/compile.sh",
    "compile:rpm": "yarn cross-env TARGET_MAKER=rpm bash ./scripts/compile.sh", 
    "typecheck": "yarn workspaces run typecheck",
    "smoketest": "cross-env SMOKETEST=true vitest run",
    "test": "vitest run",
    "test:dev": "vitest watch --coverage.enabled=false --reporter verbose",
    "lint": "yarn eslint --ext ts,tsx --max-warnings 0",
    "clean": "rimraf frontend/dist electron/dist electron/public/browser electron/.vite electron/out ~/.seraphim vscode/dist chrome/dist",
    "purge": "rimraf node_modules electron/node_modules frontend/node_modules common/node_modules chrome/node_modules vscode/node_modules",
    "testdrive": "bash ./scripts/testdrive.sh",
    "killall": "taskkill /IM node.exe /F",
    "precommit": "bash ./.githooks/pre-commit"
  },
  "dependencies": {
    "argparse": "^2.0.1",
    "chrome-remote-interface": "^0.33.3",
    "express": "^5.1.0",
    "hjson": "^3.2.2",
    "humanize-duration": "^3.33.0",
    "lodash-es": "^4.17.21",
    "node-global-key-listener": "^0.3.0",
    "openai": "^5.7.0",
    "ts-morph": "^26.0.0",
    "uuid": "^11.1.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "^3.1.0",
    "@types/argparse": "^2.0.17",
    "@types/express": "^5.0.3",
    "@types/hjson": "^2.4.6",
    "@types/humanize-duration": "^3.27.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.29",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "chalk": "^5.4.1",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-i18next": "^6.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "happy-dom": "^18.0.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.15.0",
    "vite-bundle-visualizer": "^1.2.1",
    "vitest": "^3.2.4"
  }
}
